<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/development_item_custom_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:descendantFocusability="blocksDescendants"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        tools:background="@drawable/dev_bg_button">

        <CheckBox
            android:id="@+id/development_item_custom_check_check"
            style="@style/style_development_checkbox_circle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/development_item_custom_check_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.5dp"
            android:layout_marginStart="7.5dp"
            android:layout_toEndOf="@id/development_item_custom_check_check"
            android:layout_toRightOf="@id/development_item_custom_check_check"
            android:gravity="center_vertical"
            android:textColor="@color/dev_clr_code_green"
            android:textSize="12.5dp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:text="Development Mode Enabled" />
    </RelativeLayout>
</RelativeLayout>