<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/core_picker_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <AbsoluteLayout
        android:id="@+id/core_picker_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/core_picker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#6D6D6D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:text="Text"/>
    </AbsoluteLayout>

    <AbsoluteLayout
        android:id="@+id/core_picker_root_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF0F0F0"
        android:padding="15dp">

        <TextView
            android:id="@+id/core_picker_text_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/dev_clr_code_green"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:text="Text"/>
    </AbsoluteLayout>
</RelativeLayout>